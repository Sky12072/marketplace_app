<p id="notice"><%= notice %></p>


<div>
  <% if @listing.image.attached? %>
    <%= image_tag @listing.image, alt: @listing.title %>
  <% else %>
    <%= image_tag "axion.jpg", alt: @listing.title %>
  <% end %>
</div>

<% if @listing.closed %>
  <h1>Sorry, this project has been Closed</h1>
<% elsif current_user && current_user.id == @listing.user_id %>
  <h1>You can't code your own listing</h1>
<% elsif current_user %>
  <%= button_to "Submit your interest!" %>
<% else %>
  <h1>Please log in to proceed</h1>
<% end %>



<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<p>
  <strong>closed:</strong>
  <%= @listing.closed %>
</p>

<p>
  <strong>User:</strong>
  <%= @listing.user_id %>
</p>

<p>
  <strong>Category:</strong>
  <%= @listing.category_id %>
</p>

<% if current_user && current_user.id == @listing.user_id %>
  <%= link_to 'Edit', edit_listing_path(@listing) %> |
<% end %>
<%= link_to 'Back', listings_path %>
