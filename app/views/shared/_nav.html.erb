<!doctype html>
<html lang="en">
<head>   
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
   
        
</head>

    <body>
    
        

        <main>  

            <header class="p-3 bg-dark text-white">                
                <div class="container">     
                        
                    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
                        </a>
                        <div class="axion">
                            <h3>Axion<span class="custom-trademark">&#153;</span></h3>
                        </div>
                        
                        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">         
                                                    
                        <li><a href="<%= root_path %>" class="nav-link px-2 text-white">Home</a></li>
                        <li><a href="<%= listings_path %>" class="nav-link px-2 text-white">Listings</a></li>
                        <li><a href="<%= about_path %>" class="nav-link px-2 text-white">About</a></li>
                        </ul> 

                        

                        
                        

                        

                        <div class="button" >
                            <% if user_signed_in? %>                                
                                
                                <div class="padding" >
                                    <% if current_user.avatar.attached? %>
                                        <%= image_tag current_user.avatar, height: 40 , width: 40, class: "rounded-circle" %> 
                                    <% else %>
                                        <%= image_tag "user.png", alt: "default avatar", size: 40 %>
                                    <% end %>
                                        <%= link_to current_user.username, edit_user_registration_path, class:"navbar-item" %>                                    
                                </div>
                                <div class="padding">
                                    <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-light me-2" %>
                                </div>
                        
                        
                            <% else %>
                                <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-light me-2" %>
                                <%= link_to "Sign in", new_user_session_path, class: "btn btn-warning" %>
                            <% end %>
                        </div>

                        
                    </div>
                </div>
            </header>
        
        </main>


        

  

      
    </body>
</html>
